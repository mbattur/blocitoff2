<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
        <div style='margin-top: 15px;'>
          <%= render partial: 'items/item', locals: { user: @user, item: @item } %>
          <%= link_to "New Item", new_user_item_path(current_user), class: 'btn btn-success' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.email %></h2>
        <table class="table table-hover">
          <tr>
            <th>Item</th>
           </tr> 
          <%= render @items %>
        </table>
      </div>
    </div>
  </div>
</div>