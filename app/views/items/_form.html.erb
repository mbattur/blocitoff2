<div class="form-group">
  <%= form_for [current_user, @item] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new item" %>
    </div>
    <%= f.submit "Submit Item", class: 'btn btn-success' %>
  <% end %>
</div>